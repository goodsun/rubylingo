{
  "name": "rubylingo-api",
  "version": "1.0.0",
  "description": "RubyLingo - Japanese text to English Ruby conversion API using EDICT/JMdict with TinySegmenter",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest",
    "build": "echo 'Build complete'",
    "deploy": "serverless deploy",
    "download-jmdict": "node scripts/download-jmdict.js",
    "parse-jmdict": "node scripts/parse-jmdict.js",
    "build-dictionaries": "npm run download-jmdict && npm run parse-jmdict",
    "build-shower-dictionaries": "node scripts/build-shower-dictionaries.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "serverless-http": "^3.2.0",
    "tiny-segmenter": "^0.2.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "japanese",
    "ruby",
    "english",
    "learning",
    "api",
    "edict",
    "jmdict",
    "dictionary"
  ],
  "author": "RubyLingo Team",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT", 
      "url": "https://opensource.org/licenses/MIT"
    },
    {
      "type": "CC-BY-SA-4.0",
      "url": "https://creativecommons.org/licenses/by-sa/4.0/",
      "comment": "JMdict/EDICT dictionary data - Electronic Dictionary Research and Development Group"
    }
  ]
}
